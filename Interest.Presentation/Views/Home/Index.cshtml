@model IEnumerable<RequestViewModel>

@{
    ViewData["Title"] = "Home Page";
}

@if (ViewBag.Id > 0 && ViewBag.isDeleted)
{
    <div class="alert alert-danger" role="alert">
        Request @ViewBag.Id has been deleted
    </div>
}

@foreach (var request in Model)
{
    <h2>Interest Request: @request.Id</h2>
    <a href="/Request/EditRequest/@request.Id" class="btn btn-primary">Edit request</a>
    <br />
    <a href="/Request/DeleteRequest/@request.Id" class="btn btn-danger">Delete request</a>
    <br />
    <span>Entered value: @request.Value</span>
    <h4>Computations</h4>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Year</th>
                <th scope="col">Value</th>
                <th scope="col">Interest Rate</th>
                <th scope="col">Future Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var computation in request.Computations)
            {
                <tr>
                    <th scope="row">@computation.Year</th>
                    <td>@computation.Value</td>
                    <td>@computation.InterestRate</td>
                    <td>@computation.FutureValue</td>
                </tr>
            }
        </tbody>
    </table>
}